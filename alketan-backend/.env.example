# ======= إعدادات قاعدة البيانات =======
# ⚠️ استخدم قاعدة بيانات PostgreSQL قوية في الإنتاج
DATABASE_URL="postgresql://user:password@your-db-host:5432/alketan"
DIRECT_URL="postgresql://user:password@your-db-host:5432/alketan"

# ======= إعدادات JWT - ⚠️ يجب تغيير هذه في الإنتاج =======
# ⚠️ IMPORTANT: Use a strong random string (at least 32 characters)
# استخدم مفتاح عشوائي قوي (32 حرف على الأقل)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-min-32-chars"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production-min-32-chars"
JWT_EXPIRES_IN="7d"

# ======= إعدادات Redis للإنتاج =======
# ⚠️ استخدم Redis خارجي في الإنتاج
REDIS_HOST="your-redis-host"
REDIS_PORT="6379"
REDIS_PASSWORD="your-redis-password"

# ======= Upstash Redis (مُوصى به للإنتاج) =======
# إذا كنت تستخدم Upstash للـ Rate Limiting
UPSTASH_REDIS_REST_URL="https://your-db.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# ======= إعدادات البيئة =======
# ⚠️ يجب تعيينها إلى "production" في الإنتاج
NODE_ENV="production"

# ======= إعدادات Logging =======
LOG_LEVEL="info"

# ======= إعدادات Sentry (مُوصى به للإنتاج) =======
# لتتبع الأخطاء في الإنتاج
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# ======= إعدادات البريد الإلكتروني (اختياري) =======
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""

# ======= إعدادات رفع الملفات (اختياري) =======
S3_BUCKET=""
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION=""

# ======= إعدادات Cookies - ⚠️ مهم للإنتاج =======
# Domain للـ cookies - استخدم نطاقك الفعلي في الإنتاج بدون www
# مثال: COOKIE_DOMAIN=".yourdomain.com"
COOKIE_DOMAIN=".yourdomain.com"

# ======= إعدادات الأمان الإضافية =======
# ⚠️ الحد الأدنى لطول كلمة المرور - 8 أحرف minimum
MIN_PASSWORD_LENGTH="8"

# ⚠️ تفعيل التحقق الثنائي (2FA) - "true" أو "false"
ENABLE_2FA="false"

# ⚠️ مدة صلاحية الجلسة بالثواني (86400 = 24 ساعة)
SESSION_EXPIRY="86400"

# فترة Grace للتجديد التلقائي (3600 = ساعة واحدة)
TOKEN_REFRESH_WINDOW="3600"

# ======= إعدادات_RATE_LIMIT =======
# عدد المحاولات المسموحة قبل الحظر
MAX_LOGIN_ATTEMPTS="5"

# مدة الحظر بالدقائق (15 دقيقة)
LOCKOUT_DURATION_MINUTES="15"

# نافذة إعادة تعيين عداد المحاولات بالساعات (24 ساعة)
ATTEMPT_RESET_WINDOW_HOURS="24"
